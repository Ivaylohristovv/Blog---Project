<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel">
                  <div class="panel-heading">
                      <div class="text-center">
                          <div class="row">
                              <div class="col-sm-9">
                                  <h3 class="pull-left">{{title}}</h3>
                              </div>
                              <div class="col-sm-3">
                                  <h4 class="pull-right">
                                  <small><em>{{formatTime createdAt "MM-DD-YYYY"}}</em></small>
                                  </h4>
                              </div>
                          </div>
                      </div>
                  </div>

              <div class="panel-body">
                {{content}}
              </div>

              <div class="panel-footer">
                  <span class="label label-default">{{category}}</span>
              </div>
          </div>
    </div>
  </div>
</div>
