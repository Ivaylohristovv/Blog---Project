<div class="container">
  <div class="row">
      {{#each articles}}
    <div class="col-sm-4 col-md-4">
            <div class="post">
                <div class="post-img-content">

                    <span class="post-title"><h4>{{title}}</h4><br></span>
                </div>
                <div class="content">
                    <div class="author">
                        By <b>{{createdBy}}</b> |
                        <time datetime="2014-01-20">{{formatTime createdAt "MM-DD-YYYY"}}</time>
                        <span class="pull-right"><b>Views:</b>{{views}}</span>
                    </div>
                    <div>
                        {{content}}
                    </div>
                    <div>
                        <a href="/article/details/{{this.id}}" class="btn btn-warning btn-sm">Read more</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
  </div>
</div>
